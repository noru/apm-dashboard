{
  "compilerOptions": {
    "target": "es5",
    "module": "esnext",
    "lib": [
      "es5",
      "es2015",
      "dom",
      "dom.iterable",
      "scripthost"
    ],
    "allowJs": true,
    "jsx": "react",
    "strict": true,
    "noImplicitAny": false,
    "strictNullChecks": true,
    "noImplicitThis": true,
    "alwaysStrict": true,
    "skipLibCheck": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": false,
    "moduleResolution": "node",
    "baseUrl": "./",
    "paths": {
      "config": ["./config/index.js"],
      "js/*": ["./src/js/*"],
      "models/*": ["./src/js/models/*"],
      "components/*": ["./src/js/components/*"],
      "containers/*": ["./src/js/containers/*"],
      "hoc/*": ["./src/js/hoc/*"],
      "routes/*": ["./src/js/routes/*"],
      "observables/*": ["./src/js/observables/*"],
      "observables": ["./src/js/observables/index.ts"],
      "utils/*": ["./src/js/utils/*"],
      "mocks/*": ["./src/js/mocks/*"],
      "services/*": ["./src/js/services/*"]
    },
    "allowSyntheticDefaultImports": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true
  },
  "exclude": [
    "node_modules",
    "build",
    "dist",
    "test",
    "src/legacy"
  ],
  "awesomeTypescriptLoaderOptions": {
    "ignoreDiagnostics": [2339, 2322, 7027, 6133, 2564, 2345, 2531, 2351],
    "useBabel": true,
    "useCache": true
  }
}
